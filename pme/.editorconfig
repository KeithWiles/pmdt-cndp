# See https://editorconfig.org/ for syntax reference.

root = true

[**]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120

[*.py]
indent_style = tab
indent_size = 4

[*.rst]
indent_style = tab
indent_size = 3

[*.build]
indent_style = tab
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 72

